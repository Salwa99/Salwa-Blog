<section>
  <div class="user-detail">
    <%= render "shared/user", user: @user %>

    <div class="user-bio">
      <h3>Bio</h3>
      <p><%= @user.bio %></p>
    </div>
  </div>

  <div class="recent-posts">
    <% @user.last_three_posts.each do |post| %>
      <%= render "shared/post", post: post %>
    <% end %>
  </div>

  <%= link_to "See All Posts", user_posts_path(@user), class: "link-btn" %>
</section>
