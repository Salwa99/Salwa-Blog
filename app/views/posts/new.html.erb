<section>
<%= render "shared/header", current_user: @current_user %>

  <%= content_tag :h1, "Create a new post" %>

  <%= render "form", post: @post, user: @user %>

  <% if flash[:error] %>
    <%= content_tag :div, class: "alert alert-error" do %>
      <%= flash[:error] %>
    <% end %>
  <% end %>
</section>
